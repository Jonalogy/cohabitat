<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Booking_id</th>
      <th>Space</th>
      <th>Availability</th>
      <th>Start</th>
      <th>End</th>
      <th>Seat</th>
      <th>Total price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.id %></td>
        <td><%= booking.space_id %></td>
        <td><%= booking.availability_id %></td>
        <td><%= booking.start.strftime("%d-%b-%Y") %></td>
        <td><%= booking.end.strftime("%d-%b-%Y") %></td>
        <td><%= booking.seat %></td>
        <td><%= booking.total_price %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Delete', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

