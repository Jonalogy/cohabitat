<form action="/html/tags/html_form_tag_action.cfm">
  <div class="container">
    <h1>Edit Profile</h1><br>
    <div class="form-group row">
      <label for="email" class="col-xs-3 col-form-label"><%= f.label :email %></label>
      <div class="col-xs-9">
        <%= f.text_field :email,:readonly => true, :size => 80 %>
      </div>
    </div>

    <div class="form-group row">
      <label for="last_name" class="col-xs-3 col-form-label"><%= f.label :first_name %></label>
      <div class="col-xs-9">
        <%= f.text_field :first_name, :size => 80 %>

      </div>
    </div>

    <div class="form-group row">
      <label for="last_name" class="col-xs-3 col-form-label"><%= f.label :last_name %></label>
      <div class="col-xs-9">
        <%= f.text_field :last_name, :size => 80 %>
      </div>
    </div>


    <div class="form-group row">
      <label for="profile_image" class="col-xs-3 col-form-label"><%= f.label :profile_image %></label>
      <div class="col-xs-9">
        <img src="<%= @user.profile_img_url %>" alt="" class="profileImg" />
      </div>
    </div>

    <div class="form-group row">
      <label for="change_profile_image" class="col-xs-3 col-form-label"><%= f.label :change_profile_image %></label>
      <div class="col-xs-9">
        <%= f.file_field :profile_img_url, :size => 80 %>
      </div>
    </div>

    <div class="form-group row">
      <label for="wallet" class="col-xs-3 col-form-label"><%= f.label :wallet %></label>
      <div class="col-xs-9">
        <%= f.text_field :wallet, :size => 80 %>
      </div>
    </div>


    <div class="form-group row">
      <label for="bio" class="col-xs-3 col-form-label"><%= f.label :bio %></label>
      <div class="col-xs-9">
        <%= f.text_area :bio, :rows => 4 %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-xs-3 col-xs-9">
        <%= f.submit "Submit", class: "btn btn-primary active" %>
      </div>
    </div>
  </div>
</form>



<% end %>

