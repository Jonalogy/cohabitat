<p id="notice"><%= notice %></p>

<h1>Spaces</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Country</th>
      <th>Area</th>
      <th>Address</th>
      <th>Postal</th>
      <th>Space name</th>
      <th>Space description</th>
      <th>Space type</th>
      <th>Vibe</th>
      <th>Amenity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.user_id %></td>
        <td><%= space.country.name %></td>
        <td><%= space.area.name %></td>
        <td><%= space.address %></td>
        <td><%= space.postal %></td>
        <td><%= space.space_name %></td>
        <td><%= space.space_description %></td>
        <td><%= space.space_type.name %></td>
        <td><%= space.vibe.name %></td>
        <td><%= link_to 'Show', space %></td>
        <td><%= link_to 'Edit', edit_space_path(space) %></td>
        <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

