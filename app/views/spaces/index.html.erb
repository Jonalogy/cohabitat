<div class="background-image-habitats">


  <div class="space-body center-content">


    <h1>Your Habitats</h1>
  </div>


<div class="space-details col-xs-12 col-md-10 offset-md-1">

  <div class="container-fluid col-md-8 offset-md-2 avail-table">
    <div class="row center-content">
      <h4>Availabilities
        <%if @user_id == @space_owner%>
           <%= link_to 'New', new_availability_path(space_id: @space.id), :role => 'button', :class => "btn btn-outline-primary btn-sm"  %>
         <%end%>
     </h4>

     <%if @spaces.length != 0 %>

      <div class="row add">
        <div class="col-sm-3">
           Name
        </div>
        <div class="col-sm-3">
           Location
        </div>
        <div class="col-sm-2">
           Amenities
        </div>
        <div class="col-sm-2">
           Type & Vibe
        </div>
        <div class="col-sm-2">
           <!-- Actions -->
        </div>
      </div>


      <% @spaces.each do |space| %>

        <div class="row">
          <div class="col-sm-3">
             <%= space.space_name %>
          </div>
          <div class="col-sm-3">
            <%= space.area.name %></br>
            <%= space.address %></br>
            <%= space.country.name%></br>
            <%= space.postal %></br>
          </div>
          <div class="col-sm-2">
            <% space.amenities.each do |amenity| %>
            <span><%=amenity.name%></span><br>
            <% end %>
          </div>
          <div class="col-sm-2">
            <%= space.space_type.name %></br>
            <%= space.vibe.name %></br>
          </div>
          <div class="col-sm-2">
            <%= link_to 'Show', space, :role => 'button', :class => "btn btn-outline-success btn-sm"  %></br>
              <%= link_to 'Edit', edit_space_path(space), :role => 'button', :class => "btn btn-outline-info btn-sm"  %></br>
              <%= link_to 'Delete', space, method: :delete, data: { confirm: 'Are you sure? This action cannot be undone!' }, :role => 'button', :class => "btn btn-outline-danger btn-sm"  %>
          </div>
        </div>

        <% end %>

        <%else%>
          <div class="center-content">
            No Available listings yet, please try again next time.
          </div>
      <% end %>
    </div>
 </div>



</div>


<div class="container-fluid">
<div class="row">
<h1>Habitats</h1>

<div class="col-xs-12 col-md-10 offset-md-1">
  <%= link_to 'Add Habitat', new_space_path, :role => 'button', :class => "btn btn-outline-secondary btn-sm"  %>
      <table class="table table-hover table-bordered ">

        <thead class="thead">
          <tr>
            <!-- <th>User</th> -->
            <th>Habitat Name</th>
            <th>Location</th>
            <th>Amenities</th>
            <th>Type &amp; Vibe</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @spaces.each do |space| %>
          <tr>
            <!-- <td><%# space.user_id %></td> -->
            <td><strong><%= space.space_name %></strong></td>
            <td>
              <%= space.area.name %></br>
              <%= space.address %></br>
              <%= space.country.name%></br>
              <%= space.postal %></br>
            </td>
            <td>
              <% space.amenities.each do |amenity| %>
              <span><%=amenity.name%></span><br>
              <% end %>
            </td>
            <td>
              <%= space.space_type.name %></br>
              <%= space.vibe.name %></br>
            </td>


            <td><%= link_to 'Show', space, :role => 'button', :class => "btn btn-outline-success btn-sm"  %></br>
              <%= link_to 'Edit', edit_space_path(space), :role => 'button', :class => "btn btn-outline-info btn-sm"  %></br>
              <%= link_to 'Delete', space, method: :delete, data: { confirm: 'Are you sure? This action cannot be undone!' }, :role => 'button', :class => "btn btn-outline-danger btn-sm"  %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

</div>
</div>
</div>



</div>

