<h1>Schedule</h1>

<div class="container-fluid">
<div class="row">
<div class="col-xs-12 col-md-8 offset-md-2">
    <h3>My Bookings</h3>
    <%if @my_bookings.length != 0 %>
        <% @my_bookings.each do |booking| %>
          <div class="col-xs-12 bubble">
          </br>
          <strong>Booking_id:</strong> <%=booking.id%></br>
          <strong>Space Name:</strong> <%=@spaces_hash[booking.space_id]%>
          <strong>Pax:</strong> <%=booking.seat%></br>
          <strong>Starting:</strong> <%=booking.start.strftime("%d-%b-%Y")%>
          <strong>Ending:</strong> <%=booking.end.strftime("%d-%b-%Y")%></br>

          <%= link_to 'View Space', space_path(booking.space_id), :role => 'button', :class => "btn btn-outline-primary btn-sm" %>
          <%= link_to 'Delete Booking', booking, method: :delete, data: { confirm: 'Are you sure? No refunds will be made to you.' }, :role => 'button', :class => "btn btn-outline-danger btn-sm" %>
          </br>

          </div>
        <%end %>
    <%else%>
        <div class="col-xs-12 bubble">
          You have not made any bookings yet. Go find one!

        </div>
    <%end%> <%#End of if @my_bookings.length%>
</div>
</div>
</div>
<br/>
<br/>
<div class="container-fluid">
<div class="row">
<div class="col-xs-12 col-md-8 offset-md-2">
  <h3>Guest Bookings</h3>
  <%if @guest_bookings.length != 0%>
      <% @guest_bookings.each do |guest_booking| %>
        <div class="col-xs-12 bubble">
        </br>
          <strong>Booking_id: </strong> <%=guest_booking.id%><br/>

          <strong>By user_id: </strong> <%=guest_booking.user_id%><br/>

          <strong> Booked Space_id: </strong> <%=guest_booking.space_id%><br/>

          <strong>Starting: </strong> <%=guest_booking.start.strftime("%d-%b-%Y")%><br/>

          <strong> Ending: </strong> <%=guest_booking.end.strftime("%d-%b-%Y")%><br/>

          <strong> Seats: </strong> <%=guest_booking.seat%><br/>

          <%= link_to 'View Guest', user_path(guest_booking.user_id), :role => 'button', :class => "btn btn-outline-primary btn-sm" %>
          <%= link_to 'Revoke Booking', guest_booking, method: :delete, data: { confirm: 'Are you sure? Guests will not be informed of the revole. Feature under construction' }, :role => 'button', :class => "btn btn-outline-danger btn-sm" %>
        </br>

        </div>
      <%end%>
  <%else%>
      <div class="col-xs-12 bubble">
        You have not guest bookings yet...
      </div>
  <%end%>

</div>
</div>
</div>
