<p id="notice"><%= notice %></p>

<h1>Shouts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Space</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shouts.each do |shout| %>
      <tr>
        <td><%= shout.user_id %></td>
        <td><%= shout.space_id %></td>
        <td><%= shout.message %></td>
        <td><%= link_to 'Show', shout %></td>
        <td><%= link_to 'Edit', edit_shout_path(shout) %></td>
        <td><%= link_to 'Delete', shout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shout', new_shout_path %>
